{% block changeemail %}
<div data-cidaas-email-change data-cidaas-email-change-options="{{
           {
                'sub': context.customer.customFields.sub,
                'csrf': sw_csrf('cidaas.sendemailotp', {'mode': 'token'}),
                'csrfverify': sw_csrf('cidaas.verifyemail', {'mode': 'token'})
            }|json_encode
        }}">
</div>

<div class="card account-email" id="accountMailContainer">
    {% block page_change_email_form %}
    <form class="card-body" id="emailForm" data-locale="{{ app.request.locale }}">
        <div class="card-title">
            {{ "account.profileMailTitle"|trans|sw_sanitize }}
        </div>

        {# current login email #}
        <input type="hidden" id="currentUserEmail" value="{{ context.customer.email }}">

        {% block page_change_email_form_group %}
        <div class="form-row">
            {% block page_change_new_email_form_group %}
            <div class="col form-group">
                {% block page_change_email_new_mail_label %}
                <label class="form-label" for="personalMail">
                    {{ "account.personalMailLabel"|trans|sw_sanitize }}{{ "general.required"|trans|sw_sanitize }}
                </label>
                {% endblock %}

                {% block page_change_email_new_email_input %}
                <input type="email"
                       class="form-control{% if formViolations.getViolations('/email') is not empty %} is-invalid{% endif %}"
                       autocomplete="section-personal email"
                       id="personalMail"
                       placeholder="{{ "account.personalMailPlaceholder"|trans|striptags }} {{ "general.required"|trans|striptags }}"
                       name="email[email]"
                       data-form-validation-equal="personalMail"
                       required="required">
                {% endblock %}

                {# same-as-current email error #}
                <span id="currentEmailError"
                      style="font-weight: 400; font-size: 14px; color: #c20017; display: none;">
                    {{ "account.emailSameCurrentError"|trans|sw_sanitize }}
                </span>
            </div>
            {% endblock %}

            {% block page_change_confirm_email_form_group %}
            <div class="col form-group">
                {% block page_change_email_confirm_mail_label %}
                <label class="form-label" for="personalMailConfirmation">
                    {{ "account.personalMailConfirmationLabel"|trans|sw_sanitize }}{{ "general.required"|trans|sw_sanitize }}
                </label>
                {% endblock %}

                {% block page_change_email_confirm_email_input %}
                <input type="email"
                       class="form-control{% if formViolations.getViolations('/email') is not empty %} is-invalid{% endif %}"
                       autocomplete="section-personal email"
                       id="personalMailConfirmation"
                       placeholder="{{ "account.personalMailConfirmationPlaceholder"|trans|striptags }} {{ "general.required"|trans|striptags }}"
                       name="email[emailConfirmation]"
                       required="required"
                       data-form-validation-equal="personalMail"
                       data-form-validation-equal-message="{{ "account.personalMailConfirmationInvalidMessage"|trans|striptags }}">
                {% endblock %}

                {% block page_change_email_email_mismatch %}
                <div class="invalid-feedback" style="display:none" id="invalidFeedback">
                    {{ "account.confirmEmail"|trans|sw_sanitize }}
                </div>
                {% endblock %}
            </div>
            {% endblock %}
        </div>
        {% endblock %}

        {% block page_change_email_action_buttons %}
        <div class="card-actions">
            <button type="submit"
                    class="profile-form-submit btn btn-light btn-sm"
                    title="{{ "account.profileSaveChanges"|trans|striptags }}">
                {{ "account.profileSaveChanges"|trans|sw_sanitize }}
            </button>
        </div>
        {% endblock %}
    </form>
    {% endblock %}

    {% block page_change_email_verifyemail %}
    <div class="card-body" id="verifyThing" style="display: none;">
        <div class="card-title">{{ "account.confirmChangeLabel"|trans|sw_sanitize }}</div>

        <div class="row">
            <div class="col" id="emailVerify">
                <p>{{ "account.confirmChangesMessage"|trans|sw_sanitize }}</p>
                {{ "account.newEmailLabel"|trans|sw_sanitize }}:
                <span id="emailVerifySpan" style="font-weight: 700; color: #e30613;"></span>
            </div>

            {# error during sending OTP etc. #}
            <div class="col-12 mt-2">
                <span id="emailValidateErrorSpan"
                      style="font-weight: 400; font-size: 14px; color: #c20017; display: none;"></span>
            </div>
        </div>

        <br/>

        <div class="row">
            <div class="col">
                <button type="button" class="btn btn-primary" id="verifyButton">
                    {{ "account.confirmBtnLabel"|trans|sw_sanitize }}
                </button>
                <button type="button" class="btn btn-secondary" id="cancelButton">
                    {{ "account.cancelBtnLabel"|trans|sw_sanitize }}
                </button>
            </div>
        </div>
    </div>
    {% endblock %}
</div>

{# OTP modal #}
<div class="modal fade" id="otpModal" tabindex="-1" role="dialog"
     aria-labelledby="otpModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="otpModalLabel">
            {{ "account.verifyemail"|trans|sw_sanitize }}
        </h5>
        <button type="button" class="close" data-dismiss="modal"
                aria-label="{{ "general.default.close"|trans|sw_sanitize }}">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          <p>{{ "account.enterOtpMessage"|trans|sw_sanitize }}</p>
          <input type="text" id="otpInput" class="form-control" placeholder="{{ "account.enterVerificationCode"|trans|sw_sanitize }}"
                 maxlength="6" autocomplete="one-time-code" />
          <div class="invalid-feedback" id="otpInvalidFeedback"
              style="display:none; font-weight: 400; font-size: 12px;">
              {{ "account.otpRequiredMessage"|trans|sw_sanitize }}
          </div>

          <div id="otpApiError" class="text-danger mb-2"
              style="display:none; font-weight: 400; font-size: 12px;">
              {{ "account.otpVerifyMessage"|trans|sw_sanitize }}
          </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">
            {{ "account.cancelBtnLabel"|trans|sw_sanitize }}
        </button>
        <button type="button" class="btn btn-primary" id="otpVerifyButton">
            {{ "account.confirmBtnLabel"|trans|sw_sanitize }}
        </button>
      </div>
    </div>
  </div>
</div>
{% endblock %}
